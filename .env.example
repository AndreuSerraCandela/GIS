# Archivo de configuración de variables de entorno
# Copia este archivo como .env y ajusta los valores según tu configuración

# Configuración de la base de datos SQL Server
DB_SERVER=localhost
DB_NAME=tu_base_datos_gis
DB_USER=tu_usuario
DB_PASSWORD=tu_password
DB_DRIVER=ODBC Driver 17 for SQL Server

# Configuración de Flask
SECRET_KEY=tu_clave_secreta_muy_segura_aqui
DEBUG=True
HOST=0.0.0.0
PORT=5000

# Configuración de CORS (separar múltiples orígenes con comas)
CORS_ORIGINS=*

# Configuración para diferentes entornos
# Desarrollo
DB_SERVER_DEV=localhost
DB_NAME_DEV=gis_database_dev

# Producción
DB_SERVER_PROD=tu_servidor_produccion
DB_NAME_PROD=gis_database_prod
